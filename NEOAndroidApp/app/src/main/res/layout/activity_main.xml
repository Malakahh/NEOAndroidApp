<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:keepScreenOn="true"
    tools:context="com.fuglsang_electronics.neoandroidapp.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/content_padding_top"
        android:paddingStart="@dimen/content_padding_left"
        android:paddingEnd="@dimen/content_padding_right"
        android:paddingBottom="@dimen/content_padding_bottom"
        android:background="#DCEDE8">
        <ImageView
            android:id="@+id/logoPowercharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_spacing"
            android:adjustViewBounds="true"
            android:src="@drawable/power"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_spacing"
            android:adjustViewBounds="true"
            android:src="@drawable/title"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:id="@+id/imgViewBattery"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal|center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgViewLEDGreen"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_power"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgViewLEDYellow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_battery"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgViewLEDRed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_warning"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal|center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgViewLEDBlue"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/led_blue"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/icon_connectivity"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/main_BtnInfo"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_gravity="center"
            android:src="@drawable/info" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center|bottom">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_epc_technology"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>